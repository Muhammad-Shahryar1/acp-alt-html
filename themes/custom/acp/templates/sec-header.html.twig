{{ attach_library('acp/secheader-styling') }}
{{ attach_library('acp/frontpage-scripts') }}

<!-- Skip Links for Screen Reader Navigation -->
<a href="#main-content" class="skip-link sr-only">{{ 'Skip to main content'|t }}</a>
<a href="#main-navigation" class="skip-link sr-only">{{ 'Skip to navigation'|t }}</a>

<header class="secondary-header">
  <nav id="main-navigation" role="navigation">
    <div class="nav-container">
      <!-- Logo Section -->
      <div class="logo-section">
        <div>
          <a href="{{ path('<front>') }}">
            <img src="{{ base_path ~ directory }}/assets/logos/header-logo2.png" alt="{{ 'Logo'|t }}">
          </a>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <div class="sec-header-menu">
        {{ page.header }}
        {% if language.id == 'ar' %}
         
		<a class="arabic-vist-nav" href="https://www.visitsaudi.com/ar" >
			روح السعودية
		</a>
   
              {% else %}
         
	
		<a class="english-vist-nav" href="https://www.visitsaudi.com/en" >
			Visit Saudi
		</a>
	
              {% endif %}
      </div>

      <!-- Right Side Actions -->
      <div class="right-actions">
        <!-- Language Selector -->
        <div class="language-selector-wrapper">
          <button 
            id="language-selector" 
            type="button"
            role="button"
            tabindex="0"
            aria-label="{{ 'Change language'|t }}"
            data-lang="{{ language.id }}"
            class="focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
          >
            <span id="language-selector-content-desktop">
              {% if language.id == 'ar' %}
                English
              {% else %}
                العربية
              {% endif %}
            </span>
            <img src="{{ base_path ~ directory }}/assets/language-selector.png" alt="{{ 'Language'|t }}" aria-hidden="true">
          </button>
        </div>

        <!-- Become a Partner Button -->
        {% if language.id == 'ar' %}
          <a href="{{ url('<front>') }}/node/3" class="partner-button">
            كن شريكاً
          </a>
        {% else %}
          <a href="{{ url('<front>') }}become-partner" class="partner-button">
            Become a Partner
          </a>
        {% endif %}

        <!-- Accessibility Menu Button -->
        <div class="accessibility-menu-wrapper">
          <button 
            id="accessibility-menu-button"
            type="button"
            aria-label="{{ 'Open accessibility menu'|t }}"
            aria-expanded="false"
            aria-haspopup="true"
            class="accessibility-menu-btn focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
            title="{{ 'Accessibility options'|t }}"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
              <path d="M2 12h20"></path>
            </svg>
            <span class="sr-only">{{ 'Accessibility'|t }}</span>
          </button>

          <!-- Accessibility Menu Panel -->
          <div id="accessibility-menu-panel" class="accessibility-menu-panel hidden" role="menu" aria-label="{{ 'Accessibility options'|t }}">
            <div class="accessibility-menu-header">
              <h3>
                {% if language.id == 'ar' %}
                  خيارات إمكانية الوصول
                {% else %}
                  {{ 'Accessibility Options'|t }}
                {% endif %}
              </h3>
              <button 
                id="accessibility-menu-close"
                type="button"
                aria-label="{{ 'Close accessibility menu'|t }}"
                class="accessibility-menu-close focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
            </div>

            <div class="accessibility-menu-content">
              <!-- Text Size Adjustment -->
              <div class="accessibility-menu-section">
                <label class="accessibility-menu-label">
                  {% if language.id == 'ar' %}
                    حجم النص
                  {% else %}
                    {{ 'Text Size'|t }}
                  {% endif %}
                </label>
                <div class="accessibility-menu-controls">
                  <button 
                    id="text-size-default"
                    type="button"
                    role="menuitemradio"
                    aria-checked="true"
                    aria-label="{{ 'Default text size'|t }}"
                    class="accessibility-control-btn text-size-btn active focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
                    data-size="default"
                  >
                    <span aria-hidden="true">A</span>
                    <span class="accessibility-control-label">
                      {% if language.id == 'ar' %}
                        الافتراضي
                      {% else %}
                        {{ 'Default'|t }}
                      {% endif %}
                    </span>
                  </button>
                  <button 
                    id="text-size-large"
                    type="button"
                    role="menuitemradio"
                    aria-checked="false"
                    aria-label="{{ 'Large text size'|t }}"
                    class="accessibility-control-btn text-size-btn focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
                    data-size="large"
                  >
                    <span aria-hidden="true">A</span>
                    <span class="accessibility-control-label">
                      {% if language.id == 'ar' %}
                        كبير
                      {% else %}
                        {{ 'Large'|t }}
                      {% endif %}
                    </span>
                  </button>
                  <button 
                    id="text-size-extra-large"
                    type="button"
                    role="menuitemradio"
                    aria-checked="false"
                    aria-label="{{ 'Extra large text size'|t }}"
                    class="accessibility-control-btn text-size-btn focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
                    data-size="extra-large"
                  >
                    <span aria-hidden="true">A</span>
                    <span class="accessibility-control-label">
                      {% if language.id == 'ar' %}
                        كبير جداً
                      {% else %}
                        {{ 'Extra Large'|t }}
                      {% endif %}
                    </span>
                  </button>
                </div>
              </div>

              <!-- Contrast Adjustment -->
              <div class="accessibility-menu-section">
                <label class="accessibility-menu-label">
                  {% if language.id == 'ar' %}
                    التباين
                  {% else %}
                    {{ 'Contrast'|t }}
                  {% endif %}
                </label>
                <div class="accessibility-menu-controls">
                  <button 
                    id="contrast-decrease"
                    type="button"
                    role="menuitem"
                    aria-label="{{ 'Decrease contrast'|t }}"
                    class="accessibility-control-btn contrast-btn contrast-minus focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
            title="{{ 'Decrease contrast'|t }}"
          >
                    <span aria-hidden="true">−</span>
                    <span class="accessibility-control-label">
                      {% if language.id == 'ar' %}
                        تقليل
                      {% else %}
                        {{ 'Decrease'|t }}
                      {% endif %}
                    </span>
          </button>
          <button 
            id="contrast-increase"
            type="button"
                    role="menuitem"
            aria-label="{{ 'Increase contrast'|t }}"
                    class="accessibility-control-btn contrast-btn contrast-plus focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
            title="{{ 'Increase contrast'|t }}"
          >
                    <span aria-hidden="true">+</span>
                    <span class="accessibility-control-label">
                      {% if language.id == 'ar' %}
                        زيادة
                      {% else %}
                        {{ 'Increase'|t }}
                      {% endif %}
                    </span>
                  </button>
                </div>
              </div>

              <!-- Dark Mode Toggle -->
              <div class="accessibility-menu-section">
                <label class="accessibility-menu-label">
                  {% if language.id == 'ar' %}
                    الوضع الداكن
                  {% else %}
                    {{ 'Dark Mode'|t }}
                  {% endif %}
                </label>
                <div class="accessibility-menu-controls">
                  <button 
                    id="dark-mode-toggle"
                    type="button"
                    role="menuitemcheckbox"
                    aria-checked="false"
                    aria-label="{{ 'Toggle dark mode'|t }}"
                    class="accessibility-control-btn dark-mode-btn focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
                    title="{{ 'Toggle dark mode'|t }}"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" class="dark-mode-icon">
                      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                    </svg>
                    <span
                      id="dark-mode-label"
                      class="accessibility-control-label"
                      data-label-dark="{% if language.id == 'ar' %}الوضع الداكن{% else %}{{ 'Dark Mode'|t }}{% endif %}"
                      data-label-light="{% if language.id == 'ar' %}الوضع الفاتح{% else %}{{ 'Light Mode'|t }}{% endif %}"
                    >
                      {% if language.id == 'ar' %}
                        الوضع الداكن
                      {% else %}
                        {{ 'Dark Mode'|t }}
                      {% endif %}
                    </span>
                  </button>
                </div>
              </div>

              <!-- Screen Reader Mode Toggle -->
              <div class="accessibility-menu-section">
                <label class="accessibility-menu-label">
                  {% if language.id == 'ar' %}
                    وضع قارئ الشاشة
                  {% else %}
                    {{ 'Screen Reader Mode'|t }}
                  {% endif %}
                </label>
                <div class="accessibility-menu-controls">
                  <button 
                    id="screen-reader-mode-toggle"
                    type="button"
                    role="menuitemcheckbox"
                    aria-pressed="false"
                    aria-label="{{ 'Toggle screen reader mode'|t }}"
                    class="accessibility-control-btn screen-reader-mode-btn focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
                    title="{{ 'Toggle screen reader mode'|t }}"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" class="screen-reader-icon">
                      <path d="M1 12s4-4 11-4 11 4 11 4"></path>
                      <path d="M1 12s4 4 11 4 11-4 11-4"></path>
                      <line x1="1" y1="12" x2="1.01" y2="12"></line>
                      <line x1="23" y1="12" x2="22.99" y2="12"></line>
                    </svg>
                    <span class="accessibility-control-label">
                      {% if language.id == 'ar' %}
                        وضع قارئ الشاشة
                      {% else %}
                        {{ 'Screen Reader Mode'|t }}
                      {% endif %}
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Mobile Menu Button -->
        <button 
          id="mobile-menu-button"
          type="button"
          aria-label="{{ 'Toggle mobile menu'|t }}"
          aria-expanded="false"
          class="focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
        >
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden">
      <div class="mobile-menu-content">
        {{ page.header }}
        <div>
            {% if language.id == 'ar' %}
        <div style="text-align:right; margin-right: 16px;">
		<a  href="https://www.visitsaudi.com/ar" >
			زوروا السعودية
		</a>
   </div>
              {% else %}
         
	<div style="text-align:left; margin-left:16px;">
		<a href="https://www.visitsaudi.com/en"  >
			Visit Saudi
		</a>
	</div>
              {% endif %}

            
        </div>

        <!-- Mobile Actions -->
        <div class="mobile-actions">
          <!-- Language Selector -->
          <div id="mobile-language-selector" data-lang="{{ language.id }}">
            <span id="language-selector-content-mobile">
              {% if language.id == 'ar' %}
                English
              {% else %}
                العربية
              {% endif %}
            </span>
            <button 
              id="language-selector" 
              type="button"
              role="button"
              tabindex="0"
              aria-label="{{ 'Change language'|t }}"
              class="focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
            >
              <img src="{{ base_path ~ directory }}/assets/language-selector.png" alt="{{ 'Language'|t }}" aria-hidden="true">
            </button>
          </div>

          {% if language.id == 'ar' %}
            <a href="{{ url('<front>') }}/node/3" class="partner-button">
              كن شريكاً
            </a>
          {% else %}
            <a href="{{ url('<front>') }}become-partner" class="partner-button">
              Become a Partner
            </a>
          {% endif %}

          <!-- Accessibility Menu (Mobile) -->
          <div class="accessibility-menu-mobile">
            <button 
              id="accessibility-menu-button-mobile"
              type="button"
              aria-label="{{ 'Open accessibility menu'|t }}"
              aria-expanded="false"
              aria-haspopup="true"
              class="accessibility-menu-btn-mobile focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
              title="{{ 'Accessibility options'|t }}"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                <path d="M2 12h20"></path>
              </svg>
              <span>{{ 'Accessibility'|t }}</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
