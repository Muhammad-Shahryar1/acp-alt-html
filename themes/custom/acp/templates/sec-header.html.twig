{{ attach_library('acp/secheader-styling') }}

<header class="secondary-header">
  <nav>
    <div class="nav-container">
      <!-- Logo Section -->
      <div class="logo-section">
        <div>
          <a href="{{ path('<front>') }}">
            <img src="{{ base_path ~ directory }}/assets/logos/header-logo2.png" alt="{{ 'Logo'|t }}">
          </a>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <div class="sec-header-menu">
        {{ page.header }}
      </div>

      <!-- Right Side Actions -->
      <div class="right-actions">
        <!-- Language Selector -->
        <div class="language-selector-wrapper">
          <button 
            id="language-selector" 
            type="button"
            role="button"
            tabindex="0"
            aria-label="{{ 'Change language'|t }}"
            data-lang="{{ language.id }}"
            class="focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
          >
            <span id="language-selector-content-desktop">
              {% if language.id == 'ar' %}
                English
              {% else %}
                العربية
              {% endif %}
            </span>
            <img src="{{ base_path ~ directory }}/assets/language-selector.png" alt="{{ 'Language'|t }}" aria-hidden="true">
          </button>
        </div>

        <!-- Become a Partner Button -->
        {% if language.id == 'ar' %}
          <a href="{{ url('<front>') }}/node/3" class="partner-button">
            كن شريكاً
          </a>
        {% else %}
          <a href="{{ url('<front>') }}become-partner" class="partner-button">
            Become a Partner
          </a>
        {% endif %}

        <!-- Mobile Menu Button -->
        <button 
          id="mobile-menu-button"
          type="button"
          aria-label="{{ 'Toggle mobile menu'|t }}"
          aria-expanded="false"
          class="focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
        >
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden">
      <div class="mobile-menu-content">
        {{ page.header }}

        <!-- Mobile Actions -->
        <div class="mobile-actions">
          <!-- Language Selector -->
          <div id="mobile-language-selector" data-lang="{{ language.id }}">
            <span id="language-selector-content-mobile">
              {% if language.id == 'ar' %}
                English
              {% else %}
                العربية
              {% endif %}
            </span>
            <button 
              id="language-selector" 
              type="button"
              role="button"
              tabindex="0"
              aria-label="{{ 'Change language'|t }}"
              class="focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
            >
              <img src="{{ base_path ~ directory }}/assets/language-selector.png" alt="{{ 'Language'|t }}" aria-hidden="true">
            </button>
          </div>

          {% if language.id == 'ar' %}
            <a href="{{ url('<front>') }}/node/3" class="partner-button">
              كن شريكاً
            </a>
          {% else %}
            <a href="{{ url('<front>') }}become-partner" class="partner-button">
              Become a Partner
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </nav>
</header>
