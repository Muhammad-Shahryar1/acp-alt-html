{{ attach_library('acp/login') }}

<!DOCTYPE html>
<html{{ html_attributes.addClass('h-full bg-gray-50') }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>

  <body{{ attributes.addClass('h-full flex items-center justify-center p-4') }}>
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8 space-y-6 login-container">
      <div class="text-center">
        <h1 class="text-2xl font-bold text-gray-800 mb-2">Login to ACP</h1>
        <p class="text-sm text-gray-500">Sign in to continue.</p>
      </div>

      <div class="space-y-10">
        {{ page }}
      </div>
    </div>

    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
