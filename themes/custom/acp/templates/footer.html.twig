{{ attach_library('acp/footer-scripts') }}

   <div style="margin-top:400px;" ></div>
    <div class="page-overlay" id="pageOverlay"></div>

<footer class="footer-overlay hidden-init bg-slate-700 text-white pt-16 pb-8" id="animatedFooter">
	<div
		class="container mx-auto px-4 sm:px-6 lg:px-8">
		{# Footer Content Grid #}
		<div
			class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 lg:gap-12">

			{# Column 1: Logo #}
			<div class="lg:col-span-1">
  <div class="mb-6">
    <a href="{{ path('<front>') }}" class="w-auto h-auto flex items-center lg:justify-center">
      <img src="{{ base_path ~ directory }}/assets/white-logo.png"
           alt="{{ 'Wizz Air'|t }}"
           class="w-auto opacity-100 hover:opacity-100 transition-opacity" />
    </a>
  </div>
</div>


			{# Column 2: Overview #}
			{% set is_arabic = language.getId() == 'ar' %}

<div class="lg:col-span-1">
  <h3 class="text-lg font-semibold mb-6 text-white">
    {% if is_arabic %} لمحة عامة {% else %} Overview {% endif %}
  </h3>
  {{ page.footermenu1 }}
</div>

<div class="lg:col-span-1">
  <h3 class="text-lg font-semibold mb-6 text-white">
    {% if is_arabic %} لتواصل والدعم {% else %} Contact and Support {% endif %}
  </h3>
  {{ page.footermenu2 }}
</div>

<div class="lg:col-span-1">
  <h3 class="text-lg font-semibold mb-6 text-white">
    {% if is_arabic %} روابط ذات صلة {% else %} Related Links {% endif %}
  </h3>
  {{ page.footermenu3 }}
</div>

<div class="lg:col-span-1">
  <h3 class="text-lg font-semibold mb-6 text-white">
    {% if is_arabic %} تابعنا على {% else %} Follow us on {% endif %}
  </h3>


				{# Social Media Icons #}
				<div class="flex space-x-4 mb-8">
					<a
						href="https://x.com/ACP_Saudi" class="hover:text-white transition-colors duration-200">
						{# X Icon #}
						<svg class="w-6 h-6 text-[#56B796]" fill="currentColor" viewbox="0 0 24 24">
							<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
						</svg>
					</a>
					<a
						href="https://www.linkedin.com/company/saudi-air-connectivity-program/" class="text-gray-300 hover:text-white transition-colors duration-200">
						{# LinkedIn Icon #}
						<svg class="w-6 h-6 text-[#56B796]" fill="currentColor" viewbox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					</a>
				</div>

				{# Address #}
				<div class="flex items-start space-x-3">
					<svg class="w-8 h-8 mt-1 text-[#56B796] flex-shrink-0" viewbox="0 0 24 24" fill="none">
						<path d="M12 2C8.13 2 5 5.13 5 9C5 13.25 9.75 20 12 22C14.25 20 19 13.25 19 9C19 5.13 15.87 2 12 2Z" stroke="#5DE0B0" stroke-width="1.5" fill="none"/>
						<circle cx="12" cy="9" r="2.5" stroke="#5DE0B0" stroke-width="1.5" fill="none"/>
					</svg>
					<div class="text-gray-300 leading-relaxed">
						<p class="!text-[16px]">
							{{ page.footerAddress|render|striptags }}
						</p>
					</div>
				</div>
			</div>

		</div>

		{# Copyright Section #}
		<div class="border-t border-gray-600 mt-12 pt-4">
  <p class="text-gray-400 !text-xs text-center lg:text-left">
    {% if language.id == 'ar' %}
      جميع الحقوق محفوظة برنامج الربط الجوي 2025
    {% else %}
      Copyright © 2025 Air Connectivity Program. All rights reserved.
    {% endif %}
  </p>
</div>

	</div>
</footer>
